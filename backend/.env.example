# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001

# Database Configuration
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Local development: mongodb://localhost:27017/configurator
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/configurator
MONGODB_URI=mongodb://localhost:27017/configurator

# JWT Authentication
# Secret key for signing JWT tokens (use a strong, random string in production)
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend Configuration
# URL of the frontend application (used for CORS configuration)
# Development: http://localhost:5173
# Production: https://your-frontend-domain.com
FRONTEND_URL=http://localhost:5173

# Environment
# Options: development, production, test
NODE_ENV=development

# Partner Creation Script
# Set to 'true' to run partner creation script on server startup
# Leave as 'false' or omit in production
RUN_PARTNER_SCRIPT=false
